<div class="col-md-12 text-center">
<h2>病院用の登録画面</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "hospitals/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :"病院名" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'サンプル病院' %>
  </div>

  <div class="field">
    <%= f.label :メール %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@dive.com' %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: 'password' %>
  </div>

  <div class="field">
    <%= f.label :確認用のパスワード %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'password' %>
  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>

<%= render "hospitals/shared/links" %>
</div>
<% end %>