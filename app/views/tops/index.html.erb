<% if user_signed_in? %>
<%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
<% else %>
<%= link_to "ログイン", new_user_session_path %>
<% end %>
<P><%= current_user.name %>様のページ</p>
<h1>病院検索</h1>
<table>
<tr>
<th>病院名</th>
</tr>
<%= form_with(url: tops_path, local: true,   scope: :hospital, method: :get) do |f| %>
  <div class="title_name">
    <%= f.label "病院名" %>
    <%= f.text_field :name, class:"rform-control" %>

  </div><br>
  <%= f.submit "検索" %>
<% end %>

<% @hospitals.each do |h|%>
  <td><%= h.name %></td>



<% h.medical_departments.each do |medical_department| %>
  <tr>
    <td><%= medical_department.wait_time %></td>
    <td><%= medical_department.name %></td>
    <td><%= link_to '詳細', medical_department_path(medical_department) %></td>

    <%
=begin%>
 <td><%= link_to '受付をする', new_appointment_path(medical_department_id: medical_department.id) %></td> 
<%
=end%>
  </tr>
<% end %>
</table>
<% end %>







